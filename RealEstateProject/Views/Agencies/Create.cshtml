@model RealEstateProject.Models.Agency

@{
    ViewBag.Title = "Create";
}


<div class="container mb-3 d-flex flex-row">
    <a href="~/Agencies/Index" class="btn btn-primary" style="background-color: #00deb6; border-color: #00deb6; color: black ">Back to Agencies</a>
</div>

<body style=background-color: rgba(var(--bs-light-rgb), var(--bs-bg-opacity)) !important;>
    <form method="post" action="~/Agencies/Create">

        <div class="container rounded bg-white mt-5">
            <div class="row" style="background-color: #F2F3F4">
                <div class="col-md-4 border-right">
                    <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                        <img class="rounded-circle mt-5" src="https://graphicsfamily.com/wp-content/uploads/edd/2020/04/house-apartment-logo-green-Transparent-1.png" width="90">
                       
                        <span>Macedonia</span>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="p-3 py-5">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div class="d-flex flex-row align-items-center back">
                                <i class="fa fa-long-arrow-left mr-1 mb-1"></i>
                                <h6>Create Agency</h6>
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-md-6">
                                <label for="CompanyName">Name</label>
                                <input required name="CompanyName" type="text" class="form-control" placeholder="Enter Name">
                            </div>


                            <div class="col-md-6">
                                <label for="Email">Email</label>
                                <input required class="form-control" placeholder="Enter Email" name="Email">
                            </div>
                        </div>

                        <div class="row mt-3">
                            <div class="col-md-6">
                                <label for="Address">Address</label>
                                <input required type="text" class="form-control" placeholder="Enter Address" name="Address">
                            </div>
                            <div class="col-md-6">
                                <label for="Phone">Phone</label>
                                <input required type="text" class="form-control" placeholder="Enter Phone" name="Phone">
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-md-6">
                                <label for="Longtitude">Longtitude</label>
                                <input type="text" class="form-control" placeholder="Enter Longtitude" name="Longtitude">
                            </div>
                            

                            <div class="col-md-6">
                                <label for="Lattitude">Lattitude</label>
                                <input type="text" class="form-control" placeholder="Enter Lattitude" name="Lattitude">
                            </div>
                        </div>

           

                        <div class="mt-5 text-right">
                            <button class="btn btn-primary" style="background-color: #00deb6; border-color: #00deb6; color: black">
                                Create Agency
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</body>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
