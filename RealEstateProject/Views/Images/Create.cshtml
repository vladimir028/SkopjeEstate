@model RealEstateProject.Models.Image

@{
    ViewBag.Title = "Create";
}


@if (ViewBag.Id == null)
{
    <div class="container mb-3 d-flex flex-row">
        <a href="~/Images/Index" class="btn btn-primary" style="background-color: #00deb6; border-color: #00deb6; color: black ">Back to Images</a>
    </div>
}
@if (ViewBag.Id != null)
{
    <div class="container mb-3 d-flex flex-row">
        <a href="~/Images/Index/@ViewBag.Id" class="btn btn-primary" style="background-color: #00deb6; border-color: #00deb6; color: black ">Back to Images</a>
    </div>
}

<body style=background-color: rgba(var(--bs-light-rgb), var(--bs-bg-opacity)) !important;>
    <form method="post" action="/Images/Create">

        @if (ViewBag.Id != null)
            {
                <input type="hidden" value="@ViewBag.Id" name="id"/>
            }

            <div class="container rounded bg-white mt-5">
                <div class="row" style="background-color: #F2F3F4">
                    <div class="col-md-4 border-right">
                        <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                            <img class="rounded-circle mt-5" src="https://graphicsfamily.com/wp-content/uploads/edd/2020/04/house-apartment-logo-green-Transparent-1.png" width="90">

                            <span>Macedonia</span>
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="p-3 py-5">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <div class="d-flex flex-row align-items-center back">
                                    <i class="fa fa-long-arrow-left mr-1 mb-1"></i>
                                    <h6>Add new image to property</h6>
                                </div>
                            </div>
                            <div class="row mt-2">
                                <div class="col-md-6">
                                    <label for="ImageURL"></label>
                                    <input required type="text" class="form-control" placeholder="Enter ImageURL" name="ImageURL">
                                </div>

                                <div class="row mt-2">
                                    <div class="col-md-6">
                                        <select class="form-select" id="Property_Id" name="Property_Id">
                                            @foreach (var item in ViewBag.Properties)
                                            {
                                                <option value="@item.Id">@item.Name, Id: @item.Id</option>
                                            }
                                        </select>

                                    </div>

                                </div>
                            </div>

                            <div class="mt-5 text-right">
                                <button class="btn btn-primary" style="background-color: #00deb6; border-color: #00deb6; color: black">
                                    Add Image
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </form>
</body>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
